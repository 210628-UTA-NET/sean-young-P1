@using Microsoft.AspNetCore.Identity
@inject SignInManager<SAModels.CustomerUser> SignInManager
@inject UserManager<SAModels.CustomerUser> UserManager

<div class="text-end flex-row">
@if (SignInManager.IsSignedIn(User))
{
    <a class="btn btn-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name</a>
    <form style="display: inline-block; margin-left: 15px;" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="btn btn-outline-dark">Logout</button>
    </form>
}
else
{
    <a class="btn btn-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="btn btn-outline-dark" asp-area="Identity" asp-page="/Account/Login" style="margin-left: 15px">Login</a>
}
</div>
